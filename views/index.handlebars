<div class="container">
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<h1>Eat-Da-Burger</h1>
			<!-- <img src="https://previews.123rf.com/images/thodoristibilis/thodoristibilis1402/thodoristibilis140200003/26081492-Cartoon-cheese-burger-making-a-thumbs-up-gesture-wearing-a-crown-and-sticking-out-tongue-Stock-Vector.jpg" alt="burger image"> -->
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row">
	  	<div class="col-md-4">
	  		<h2>Burgers to be eaten</h2>
	  	</div>
	  	<div class="col-md-4"></div>
	  	<div class="col-md-4">
  			<h2>Devoured Burgers</h2>
  		</div>
  	</div>
  	<div class="row">
  		<div class="col-md-4">
	  		<ul class="list-unstyled list-group">
				{{#each burgers}}
					{{#unless this.devoured}}

						<li class="list-group-item">

							<div >{{this.id}}.{{this.burger_name}}</div>
							<form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="0">
								<button class="btn btn-primary" type="submit">Devour it!</button>
							</form>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<ul class="list-unstyled">
				{{#each burgers}}
					{{#if this.devoured}}
						<li class="list-group-item list-group-item-success">
							<p>{{this.id}}.{{this.burger_name}}</p>

						</li>
					{{/if}}
				{{/each}}

			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<h2>Add a burger</h2>
				<form class="create-update-form form-inline" action="/" method="POST">
				  <div class="form-group">
				    <!-- <label for="burgername">Burger:</label> -->
				    <input type="text" class="form-control" id="burgername" name="burger_name">
				  </div>  
  				<button type="submit" class="btn btn-primary">Add burger</button>
				</form>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>

